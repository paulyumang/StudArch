<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentRecordPDC50.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentRecordPDC50"
    xmlns:views="clr-namespace:StudentRecordPDC50.View"
    Shell.FlyoutBehavior="Disabled"
    Title="StudentRecordPDC50">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
         Title="UserPage"
         ContentTemplate="{DataTemplate views:UserPage}"
         Route="UserPage" />

    <ShellContent
       Title="StudentPage"
       ContentTemplate="{DataTemplate views:StudentPage}"
       Route="StudentPage" />

    <ShellContent
       Title="DashboardPage"
       ContentTemplate="{DataTemplate views:DashboardPage}"
       Route="DashboardPage" />

    <ShellContent
       Title="AcademicHistoryPage"
       ContentTemplate="{DataTemplate views:AcademicHistoryPage}"
       Route="AcademicHistoryPage" />
    
</Shell>
